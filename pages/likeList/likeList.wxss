/* pages/likeList/likeList.wxss */
.back {
  height: 100%;
  display: flex;
  flex-direction: column;
  font-family: 'Wawati SC';
}

.scroll {
  width: 100vw;
  height:  100vh;
  background: white;
}

.contentView {
  display: flex;
  flex-direction: row;
  margin: 20rpx;
  width: 95vw;
  height: 140rpx;
  background: rgb(239, 252, 241);
  border-radius: 10rpx;
}

.imageHeader {
  margin-top: 10rpx;
  margin-left: 20rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.message {
  display: flex;
  flex-direction: column;
  
}

.title {
  margin-top: 25rpx;
  margin-left: 20rpx;
  font-size: 14px;
}

.desc {
  margin-top: 15rpx;
  margin-left: 20rpx;
  /* margin-right: 20rpx; */
  width: 78vw;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 12px;
  color: rgb(172, 172, 172);
}